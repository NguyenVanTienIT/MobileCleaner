<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#430C0C"
        >

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/img_arrow"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/arrow3"
            />

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/img_bg3"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/bg3"
            />

        <ImageView
            android:layout_gravity="center_horizontal|center_vertical"
            android:id="@+id/img_loading3"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/loading3"
            />

        <TextView
            android:layout_marginBottom="5sp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/massage"
            android:text="Your device is not ready"
            android:textSize="20sp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5A9BC"
        >
        <ImageView
            android:id="@+id/icon_notice"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/yellow"
            />
        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="The agent status is needs attention"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26sp"/>
    </LinearLayout>

    <LinearLayout
    android:background="#0C2C43"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/anlyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_analyze"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dash_icn_green3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Analyze"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/status_analyze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:id="@+id/quickScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_quick"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dash_icn_green3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Contacts Scan"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/status_quick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    />
            </LinearLayout>
        </LinearLayout>



        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/fullScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_fullScan"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Contacts Scan"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/status_fullScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="722 contact dupplicated founds"
                    />
            </LinearLayout>
        </LinearLayout>


        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:id="@+id/secure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/icon_secure"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/yellow"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secure Internet"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/status_secure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Readly"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>
</LinearLayout>
