<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0C2C43"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_left2">

            <Button
                android:id="@+id/memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:text="Memory"
                android:textAllCaps="false"
                android:textColor="#0C2C43"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_right2">

            <Button
                android:id="@+id/stogre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:text="Stogre"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/memory_analyze"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="420sp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="5sp"
            >

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idPieChart1">

            </com.github.mikephil.charting.charts.PieChart>
        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Free Memory"
                android:textColor="#fff"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/free_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="#fff"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Use Memory"
                android:textColor="#fff"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/use_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="#fff"/>

        </LinearLayout>
    </LinearLayout>








    <LinearLayout
        android:visibility="gone"
        android:id="@+id/stogre_analyze"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="420sp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="5sp"
            >

            <com.github.mikephil.charting.charts.PieChart
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idPieChart">

            </com.github.mikephil.charting.charts.PieChart>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Free disk"
                android:textColor="#fff"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/free_disk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="#fff"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blue"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Used disk"
                android:textColor="#fff"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/used_disk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="none"
                android:textColor="#fff"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
